@component-name = "portal-social-networking"
definition {

	property osgi.app.includes="directory-web, social-activity-web, social-group-statistics-web, social-requests-web, social-user-statistics-web, network-utilities-web, opensocial-portlet";
	property portal.upstream = "roy";
	property custom.properties = "default.layout.template.id=1_column";
	property testray.main.component.name = "Social Networking";
	var pageName = "Site Members Directory Page";
	var portletName = "Site Members Directory";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		ProductMenu.gotoPortlet(
			category = "Site Builder",
			panel = "Site Administration",
			portlet = "Pages");

		SitePages.addPublicPage(
			pageName = "Site Members Directory Page",
			sitePageType = "Widget Page");

		SitePages.configurePage(
			columnName = "1 Column",
			pageName = "Site Members Directory Page",
			privacy = "Public Pages",
			sitePageType = "Widget Page");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		Portlet.addPG(portletName = "Site Members Directory");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONUser.tearDownNonAdminUsers();

			Page.tearDownCP();
		}
	}

	@priority = "3"
	test SearchSiteMembersDirectory {
		var siteName = TestCase.getSiteName(siteName = "${siteName}");

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations");

		User.addCP(
			userEmailAddress = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userMiddleName = "usermn",
			userScreenName = "usersn");

		ProductMenu.gotoPortlet(
			category = "Users",
			panel = "Control Panel",
			portlet = "Users and Organizations");

		User.editUserSiteCP(
			siteName = "${siteName}",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "First Name",
			searchTerm = "userfn",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "First Name",
			searchNoResults = "true",
			searchTerm = "userfn1",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Middle Name",
			searchTerm = "usermn",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Middle Name",
			searchNoResults = "true",
			searchTerm = "usermn1",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Last Name",
			searchTerm = "userln",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Last Name",
			searchNoResults = "true",
			searchTerm = "userln1",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Screen Name",
			searchTerm = "usersn",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Screen Name",
			searchNoResults = "true",
			searchTerm = "usersn1",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Email Address",
			searchTerm = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		Navigator.gotoPage(pageName = "Site Members Directory Page");

		User.advancedSearchViaSiteMembersDirectoryPG(
			searchField = "Email Address",
			searchNoResults = "true",
			searchTerm = "userea@liferay.com1",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");
	}

}