<?xml version="1.0"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.glassfish.jersey</groupId>
				<artifactId>jersey-bom</artifactId>
				<version>2.22.2</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.talend.components</groupId>
				<artifactId>components-bom</artifactId>
				<version>0.25.3</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-common</artifactId>
			<version>2.22.2</version>
		</dependency>
	</dependencies>
	<groupId>com.liferay</groupId>
	<artifactId>com.liferay.talend</artifactId>
	<version>0.3.0-SNAPSHOT</version>
	<name>Liferay Talend</name>
	<packaging>pom</packaging>
	<repositories>
		<repository>
			<id>liferay</id>
			<name>Liferay Repository</name>
			<url>https://repository-cdn.liferay.com/nexus/content/groups/public/</url>
		</repository>
		<repository>
			<id>talend_nexus</id>
			<name>snapshots</name>
			<url>https://artifacts-oss.talend.com/nexus/content/repositories/TalendOpenSourceSnapshot/</url>
		</repository>
		<repository>
			<id>releases</id>
			<url>https://artifacts-oss.talend.com/nexus/content/repositories/TalendOpenSourceRelease/</url>
		</repository>
		<repository>
			<id>talend_runtime_nexus</id>
			<name>Talend Runtime Nexus</name>
			<url>https://talend-update.talend.com/nexus/service/local/repositories/libraries/content/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>liferay</id>
			<name>Liferay Repository</name>
			<url>https://repository-cdn.liferay.com/nexus/content/groups/public/</url>
		</pluginRepository>
		<pluginRepository>
			<id>talend_runtime_nexus</id>
			<name>Talend Runtime Nexus</name>
			<url>https://talend-update.talend.com/nexus/service/local/repositories/libraries/content/</url>
		</pluginRepository>
		<pluginRepository>
			<id>releases</id>
			<url>https://artifacts-oss.talend.com/nexus/content/repositories/TalendOpenSourceRelease/</url>
		</pluginRepository>
	</pluginRepositories>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<daikon.version>0.27.0</daikon.version>
		<log4j.rootLogger>DEBUG, stdout</log4j.rootLogger>
		<java.version>1.8</java.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.deploy.skip>true</maven.deploy.skip>
		<log4j.appender.stdout>org.apache.log4j.ConsoleAppender</log4j.appender.stdout>
		<talend_snapshots_deployment>https://artifacts-oss.talend.com/nexus/content/repositories/TalendOpenSourceSnapshot/</talend_snapshots_deployment>
		<coverage.sonar.reportRoot>${project.basedir}</coverage.sonar.reportRoot>
		<sonar.jacoco.reportPath>${coverage.sonar.reportRoot}/target/jacoco.exec</sonar.jacoco.reportPath>
		<sonar.jacoco.itReportPath>${coverage.sonar.reportRoot}/target/jacoco-it.exec</sonar.jacoco.itReportPath>
		<components.version>0.25.3</components.version>
		<daikon.version>0.27.0</daikon.version>
		<tycho-p2-extras-plugin.version>0.26.0</tycho-p2-extras-plugin.version>
		<docker-maven-plugin.version>0.26.0</docker-maven-plugin.version>
		<docker.removeVolumes>true</docker.removeVolumes>
		<jacoco-maven-plugin.version>0.7.8</jacoco-maven-plugin.version>
		<maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
		<maven-assembly-plugin.version>3.0.0</maven-assembly-plugin.version>
		<maven-bundle-plugin.version>3.0.1</maven-bundle-plugin.version>
		<maven-dependency-plugin.version>2.10</maven-dependency-plugin.version>
		<maven-failsafe-plugin-paxexam.version>2.20-PAXEXAM-PATCH</maven-failsafe-plugin-paxexam.version>
		<maven-failsafe-plugin.version>2.18</maven-failsafe-plugin.version>
		<maven-javadoc-plugin.version>2.10.4</maven-javadoc-plugin.version>
		<maven-resources-plugin.version>3.0.2</maven-resources-plugin.version>
		<maven-scm-plugin.version>1.9.4</maven-scm-plugin.version>
		<maven-source-plugin.version>3.0.1</maven-source-plugin.version>
		<maven-surefire-plugin.version>2.18</maven-surefire-plugin.version>
		<cxf.version>3.2.6</cxf.version>
	</properties>
	<modules>
		<module>talend-common</module>
		<module>talend-definition</module>
		<module>talend-runtime</module>
	</modules>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.liferay</groupId>
					<artifactId>com.liferay.javadoc.formatter</artifactId>
					<version>1.0.35</version>
				</plugin>
				<plugin>
					<groupId>com.liferay</groupId>
					<artifactId>com.liferay.source.formatter</artifactId>
					<version>1.0.1036</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>