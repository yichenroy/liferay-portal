{
	"csfConfig": {
		"path:**/*.js": {
			"js": {
				"lint": {
					"env": {
						"browser": true,
						"jest": true,
						"mocha": true
					},
					"extends": "liferay",
					"globals": {
						"$": true,
						"AlloyEditor": true,
						"CKEDITOR": true,
						"MODULE_PATH": true,
						"main": true
					},
					"parser": "babel-eslint",
					"parserOptions": {
						"ecmaFeatures": {
							"allowImportExportEverywhere": true,
							"experimentalObjectRestSpread": true,
							"jsx": true
						},
						"ecmaVersion": 2017,
						"sourceType": "module"
					},
					"plugins": [
						"./node_modules/eslint-plugin-react"
					],
					"rules": {
						"keyword-spacing": [
							2,
							{
								"overrides": {
									"catch": {
										"after": true
									}
								}
							}
						],
						"newline-after-var": 2,
						"no-console": 0,
						"no-unknown-property": 0,
						"react/jsx-sort-props": 2,
						"react/jsx-uses-react": 0,
						"react/jsx-uses-vars": 2,
						"react/sort-comp": [
							2,
							{
								"groups": {
									"lifecycle": [
										"created",
										"willAttach",
										"attached",
										"disposed",
										"disposeInternal",
										"prepareStateForRender",
										"rendered",
										"/^sync.+$",
										"willReceiveProps",
										"willReceiveState",
										"willUpdate"
									]
								}
							}
						],
						"require-jsdoc": 0
					}
				}
			}
		}
	},
	"dependencies": {
		"autobind-decorator": "^2.1.0",
		"classnames": "^2.2.6",
		"clay-alert": "2.10.0",
		"clay-checkbox": "2.10.0",
		"clay-dropdown": "2.10.0",
		"clay-icon": "2.10.0",
		"clay-management-toolbar": "2.10.0",
		"clay-modal": "2.10.0",
		"clay-radio": "2.10.0",
		"isomorphic-fetch": "^2.2.1",
		"metal-clipboard": "^2.0.1",
		"metal-debounce": "^2.0.0",
		"metal-dom": "^2.16.5",
		"metal-drag-drop": "^3.1.0",
		"metal-events": "^2.16.5",
		"metal-jsx": "^2.16.5",
		"metal-position": "^2.1.2",
		"metal-state": "^2.16.5",
		"object-hash": "^1.3.0",
		"url-search-params-polyfill": "^5.0.0",
		"whatwg-fetch": "^3.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.5",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-metal-jsx": "^0.1.1",
		"browser-sync": "^2.24.7",
		"check-source-formatting": "^2.0.14",
		"cross-env": "^5.2.0",
		"cross-spawn": "^6.0.5",
		"eslint": "^4.10.0",
		"eslint-config-liferay": "^2.0.8",
		"eslint-plugin-react": "^7.4.0",
		"jest": "^23.6.0",
		"jest-fetch-mock": "^1.6.6",
		"liferay-jest-junit-reporter": "1.0.0",
		"liferay-npm-bundler": "^2.2.1",
		"metal-jest-serializer": "^2.0.0",
		"metal-tools-soy": "^6.0.0",
		"opn-cli": "^3.1.0",
		"rimraf": "^2.6.2"
	},
	"jest": {
		"automock": false,
		"coverageDirectory": "build/coverage",
		"coverageThreshold": {
			"global": {
				"functions": 80,
				"lines": 80
			}
		},
		"moduleNameMapper": {
			"(.*)\\.soy$": "$1.soy.js",
			"fixtures/(.*)": "<rootDir>/test/metal/js/__fixtures__/$1.js",
			"mock/(.*)": "<rootDir>/test/metal/js/__mock__/$1.js",
			"source/(.*)": "<rootDir>/src/main/resources/META-INF/resources/metal/js/$1.js"
		},
		"modulePathIgnorePatterns": [
			"/__fixtures__/",
			"/__mock__/",
			"/classes/"
		],
		"setupFiles": [
			"<rootDir>/test/metal/setup/setup.js"
		],
		"setupTestFrameworkScriptFile": "<rootDir>/test/metal/setup/setup_framework.js",
		"snapshotSerializers": [
			"metal-jest-serializer"
		],
		"testMatch": [
			"<rootDir>/test/metal/js/**/*.js"
		],
		"testResultsProcessor": "./node_modules/liferay-jest-junit-reporter",
		"testURL": "http://localhost",
		"transformIgnorePatterns": [
			"<rootDir>.*(node_modules)(?!.*metal.*).*$"
		]
	},
	"name": "dynamic-data-mapping-form-builder",
	"scripts": {
		"build": "npm run build-soy && npm run build-js && npm run bundler && npm run clean",
		"build-js": "babel --source-maps -d classes/META-INF/resources src/main/resources/META-INF/resources",
		"build-soy": "metalsoy --soyDeps \"../../../node_modules/+(clay-*|frontend-js-web)/src/**/*.soy\"",
		"build-soy-tests": "npm run build-soy && metalsoy -s \"test/**/*.soy\" -d \"test\"",
		"bundler": "liferay-npm-bundler",
		"checkFormat": "npm run csf",
		"clean": "npm run clean-soy",
		"clean-soy": "rimraf \"src/**/*.soy.js\" \"test/**/*.soy.js\"",
		"csf": "csf src/**/*.es.js src/**/*.soy test/**/*.es.js --fail-on-errors",
		"format": "npm run csf -- -i",
		"start": "node watch.js",
		"test": "npm run build-soy-tests && cross-env NODE_ENV=test jest --coverage && npm run clean",
		"test:coverage:open": "opn build/coverage/lcov-report/index.html",
		"test:snapshots": "npm run build-soy-tests && cross-env NODE_ENV=test jest --coverage -u && npm run clean"
	},
	"version": "2.0.0"
}
