<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.portal.workflow.kaleo.designer">
	<author>Eduardo Lundgren</author>
	<namespace>KaleoDesigner</namespace>
	<entity local-service="true" name="KaleoDraftDefinition" remote-service="true">

		<!-- PK fields -->

		<column name="kaleoDraftDefinitionId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column localized="true" name="title" type="String" />
		<column name="content" type="String" />
		<column name="version" type="int" />
		<column name="draftVersion" type="int" />

		<!-- Order -->

		<order by="desc">
			<order-column name="draftVersion" />
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="C_N_V" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="name" />
			<finder-column name="version" />
		</finder>
		<finder name="C_N_V_D" return-type="WDDraft" unique="true">
			<finder-column name="companyId" />
			<finder-column name="name" />
			<finder-column name="version" />
			<finder-column name="draftVersion" />
		</finder>
	</entity>
	<exceptions>
		<exception>DuplicateKaleoDraftDefinitionName</exception>
		<exception>KaleoDraftDefinitionContent</exception>
		<exception>KaleoDraftDefinitionName</exception>
	</exceptions>
</service-builder>