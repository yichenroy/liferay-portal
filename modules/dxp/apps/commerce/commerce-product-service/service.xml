	<entity local-service="true" name="CommerceProductDefintionOptionValueRel" remote-service="true">

		<!-- PK fields -->

		<column name="commerceProductDefintionOptionValueRelId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

