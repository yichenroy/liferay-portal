<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.commerce.product">
	<author>Marco Leo</author>
	<namespace>Commerce</namespace>
	<entity local-service="true" name="CommerceProductDefinition" remote-service="true" trash-enabled="true" uuid="true">

		<!-- PK fields -->

		<column name="commerceProductDefinitionId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column localized="true" name="title" type="String"  />
		<column localized="true" name="urlTitle" type="String"  />
		<column localized="true" name="description" type="String" />
		<column name="productTypeName" type="String" />
		<column name="availableIndividually" type="boolean" />
		<column name="DDMStructureKey" type="String" />
		<column name="baseSKU" type="String" />
		<column name="displayDate" type="Date" />
		<column name="expirationDate" type="Date" />
		<column name="lastPublishDate" type="Date" />
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />

		<!-- Order -->

		<order by="desc">
			<order-column name="displayDate" />
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>

		<!-- References -->

		<reference entity="Company" package-path="com.liferay.portal" />
		<reference entity="Group" package-path="com.liferay.portal" />
		<reference entity="WorkflowInstanceLink" package-path="com.liferay.portal" />
		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetLink" package-path="com.liferay.portlet.asset" />
		<reference entity="ExpandoRow" package-path="com.liferay.portlet.expando" />
		<reference entity="TrashEntry" package-path="com.liferay.portlet.trash" />
	</entity>
