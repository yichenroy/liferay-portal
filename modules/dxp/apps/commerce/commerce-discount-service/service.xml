<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.commerce.discount">
	<author>Marco Leo</author>
	<namespace>Commerce</namespace>
	<entity local-service="true" name="CommerceDiscount" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="commerceDiscountId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="target" type="String" />
		<column name="type" type="String" />
		<column name="typeSettings" type="String" />
		<column name="title" type="String" />
		<column name="useCouponCode" type="boolean" />
		<column name="couponCode" type="String" />
		<column name="limitationType" type="String" />
		<column name="limitationTimes" type="int" />
		<column name="numberOfUse" type="int" />
		<column name="cumulative" type="boolean" />
		<column name="usePercentage" type="boolean" />
		<column name="level1" type="BigDecimal" />
		<column name="level2" type="BigDecimal" />
		<column name="level3" type="BigDecimal" />
		<column name="maximumDiscountAmount" type="BigDecimal" />
		<column name="active" type="boolean" />
		<column name="lastPublishDate" type="Date" />
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />

		<!-- Order -->

		<order by="asc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>

		<!-- References -->

		<reference entity="ExpandoRow" package-path="com.liferay.portlet.expando" />
	</entity>
	<entity local-service="true" name="CommerceDiscountRule" remote-service="true">

		<!-- PK fields -->

		<column name="commerceDiscountRuleId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="commerceDiscountId" type="long" />
		<column name="type" type="String" />
		<column name="typeSettings" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="commerceDiscountId" return-type="Collection">
			<finder-column name="commerceDiscountId" />
		</finder>
	</entity>
	<entity local-service="true" name="CommerceDiscountUserSegmentRel" remote-service="true">

		<!-- PK fields -->

		<column db-name="CDiscountUserSegmentRelId" name="commerceDiscountUserSegmentRelId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="commerceDiscountId" type="long" />
		<column name="commerceUserSegmentEntryId" type="long" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="commerceDiscountId" return-type="Collection">
			<finder-column name="commerceDiscountId" />
		</finder>
		<finder name="CommerceUserSegmentEntryId" return-type="Collection">
			<finder-column name="commerceUserSegmentEntryId" />
		</finder>
	</entity>
</service-builder>