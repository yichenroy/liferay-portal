<definition component-name="portal-commerce">
	<property name="portal.upstream" value="true" />
	<property name="test.run.environment" value="EE" />
	<property name="testray.main.component.name" value="Commerce" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<if>
			<condition function="IsElementPresent" locator1="ContentRow#ENTRY_CONTENT_ROW_1" />
			<then>
				<execute macro="CommerceCatalog#moveCatalogEntriesToRecycleBin" />
			</then>
		</if>

		<execute macro="User#logoutPG" />
	</tear-down>

	<command name="AddCatalogEntryWithSingleImage" priority="5">
		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalogEntry#uploadCatalogEntrySingleImage">
			<var name="menuTab" value="Images" />
			<var name="uploadFileName" value="high_resolution_photo.jpg" />
		</execute>
	</command>

	<command name="AddSimpleCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalogEntry#viewCatalogEntry">
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>
	</command>

	<command name="AssertCatalogEntriesSearchResultsNotInTrashBin" priority="5">
		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product_Long_Description_1" />
			<var name="productShortDescription" value="Product_Short_Description_1" />
			<var name="productTitle" value="Product_Title_1" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceCatalog#moveCatalogEntryToRecycleBinViaCheckbox" >
			<var name="productTitle" value="Product_Title_1" />
		</execute>

		<execute macro="CommerceNavigator#searchCatalogEntry">
			<var name="productTitle" value="Product_Title_1" />
		</execute>

		<execute function="AssertElementNotPresent" locator1="ContentRow#ENTRY_CONTENT_ROW_1" value1="Product_Title_1" />
	</command>

	<command name="DeleteAllCatalogEntriesViaCheckbox" priority="5">
		<for list="1,2,3" param="entryNumber">
			<execute macro="CommerceCatalog#addEntry">
				<var name="addMenu" value="Simple" />
				<var name="baseSku" value="ProductSKU ${entryNumber}" />
				<var name="productLongDescription" value="Product Long Description ${entryNumber}" />
				<var name="productShortDescription" value="Product Short Description ${entryNumber}" />
				<var name="productTitle" value="Product Title ${entryNumber}" />
			</execute>

			<execute macro="CommerceCatalog#publishEntry" />
		</for>

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceCatalog#moveCatalogEntriesToRecycleBin" />

		<for list="1,2,3" param="entryNumber">
			<execute function="AssertElementNotPresent" locator1="ContentRow#ENTRY_CONTENT_ROW_1" value1="Product Title ${entryNumber}" />
		</for>
	</command>

	<command name="DeleteCatalogEntryViaCheckbox" priority="5">
		<var name="portlet" value="Catalog" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceCatalog#moveCatalogEntryToRecycleBinViaCheckbox" >
			<var name="productTitle" value="Product Title 1" />
		</execute>
	</command>

	<command name="EditCatalogEntry">
		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description" />
			<var name="productShortDescription" value="Product Short Description" />
			<var name="productTitle" value="Product Title" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title" />
		</execute>

		<execute macro="CommerceCatalogEntry#editCatalogEntryTitle">
			<var name="newProductTitle" value="New Product Title" />
		</execute>

		<execute macro="CommerceCatalogEntry#editCatalogEntryShortDescription">
			<var name="newProductShortDescription" value="New Product Short Description" />
		</execute>

		<execute macro="CommerceCatalogEntry#editCatalogEntryLongDescription">
			<var name="newProductLongDescription" value="New Product Long Description" />
		</execute>

		<execute macro="CommerceCatalogEntry#editCatalogEntryBaseSKU">
			<var name="baseSku" value="New Product BaseSKU" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<if>
			<condition function="IsElementPresent" locator1="Message#SUCCESS" />
			<then>
				<execute function="AssertElementPresent" locator1="Message#SUCCESS" />
			</then>
			<else>
				<execute function="AssertTextEquals" locator1="CommerceCatalogEntry#WORKFLOW_STATUS" value1="Approved" />
			</else>
		</if>

		<execute macro="ProductMenuHelper#gotoPortlet">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute function="AssertTextEquals" locator1="CommerceCatalog#PRODUCT_TITLE" value1="${newProductTitle}">
			<var name="key_productTitle" value="New Product Title" />
			<var name="newProductTitle" value="New Product Title" />
		</execute>

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="New Product Title" />
		</execute>

		<execute macro="CommerceCatalogEntry#viewCatalogEntry">
			<var name="baseSku" value="New Product BaseSKU" />
			<var name="productLongDescription" value="New Product Long Description" />
			<var name="productShortDescription" value="New Product Short Description" />
			<var name="productTitle" value="New Product Title" />
		</execute>
	</command>

	<command name="SetCatalogEntryExpirationDate" priority="5">
		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="WebContent#addExpirationDateCP">
			<var name="expirationDate" value="01/02/3000" />
		</execute>

		<execute macro="CommerceCatalog#publishEntry" />

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute function="AssertTextEquals" locator1="TextInput#EXPIRATION_DATE" value1="01/02/3000" />
	</command>

	<command name="AddSimpleDraftCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="addMenu" value="Simple" />
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalog#saveEntryAsDraft" />

		<execute macro="CommerceNavigator#gotoCatalogEntry">
			<var name="productTitle" value="Product Title 1" />
		</execute>

		<execute macro="CommerceCatalogEntry#viewCatalogEntry">
			<var name="baseSku" value="ProductSKU" />
			<var name="productLongDescription" value="Product Long Description 1" />
			<var name="productShortDescription" value="Product Short Description 1" />
			<var name="productTitle" value="Product Title 1" />
		</execute>
	</command>
</definition>