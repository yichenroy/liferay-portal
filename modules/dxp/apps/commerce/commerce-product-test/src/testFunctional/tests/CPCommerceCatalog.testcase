			<var name="productFullDescription" value="Grouped Product 1 Full Description" />
			<var name="productShortDescription" value="Grouped Product 1 Short Description" />
			<var name="productTitle" value="Grouped Product 1 Title" />
		</execute>
	</command>

	<command name="CheckPublishedSimpleCatalogEntry" priority="5">
		<execute test-case="CPCommerceCatalog#AddSimpleCatalogEntry" />

		<execute macro="CommerceNavigator#gotoEntry">
			<var name="entryTitle" value="Simple Product 1 Title" />
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceEntry#viewCatalogEntry">
			<var name="baseSku" value="Simple Product 1 SKU" />
			<var name="productFullDescription" value="Simple Product 1 Full Description" />
			<var name="productShortDescription" value="Simple Product 1 Short Description" />
			<var name="productTitle" value="Simple Product 1 Title" />
		</execute>
	</command>

	<command name="CheckPublishedVirtualCatalogEntry" priority="5">
		<execute test-case="CPCommerceCatalog#AddVirtualCatalogEntry" />

		<execute macro="CommerceNavigator#gotoEntry">
			<var name="entryTitle" value="Virtual Product 1 Title" />
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceEntry#viewCatalogEntry">
			<var name="baseSku" value="Virtual Product 1 SKU" />
			<var name="productFullDescription" value="Virtual Product 1 Full Description" />
			<var name="productShortDescription" value="Virtual Product 1 Short Description" />
