<definition component-name="portal-commerce">
	<property name="portal.upstream" value="true" />
	<property name="test.run.environment" value="CE" />
	<property name="testray.main.component.name" value="Commerce" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="CommerceNavigator#gotoSitesCommerce">
					<var name="portlet" value="Catalog" />
				</execute>

				<if>
					<condition function="IsElementNotPresent" locator1="CommerceNavigation#EMPTY_SEARCH_CONTAINER" />
					<then>
						<execute macro="CommerceCatalog#moveCatalogEntriesToRecycleBin" />
					</then>
				</if>

				<execute macro="CommerceNavigator#gotoSitesCommerce">
					<var name="portlet" value="Options" />
				</execute>

				<if>
					<condition function="IsElementNotPresent" locator1="CommerceNavigation#EMPTY_SEARCH_CONTAINER" />
					<then>
						<execute macro="CommerceOptions#deleteOptionsEntries" />
					</then>
				</if>

				<execute macro="User#logoutPG" />
			</else>
		</if>
	</tear-down>

	<command name="AddGroupedCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="baseSku" value="Grouped Product 1 SKU" />
			<var name="plusMenu" value="Grouped" />
			<var name="productFullDescription" value="Grouped Product 1 Full Description" />
			<var name="productShortDescription" value="Grouped Product 1 Short Description" />
			<var name="productTitle" value="Grouped Product 1 Title" />
		</execute>

		<execute macro="CommerceEntry#publishEntry" />

		<execute function="Pause" locator1="3000" />

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute function="AssertElementPresent" locator1="CommerceNavigation#ENTRY_TITLE">
			<var name="key_entryTitle" value="Grouped Product 1 Title" />
		</execute>
	</command>

	<command name="AddGroupedDraftCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="baseSku" value="Grouped Product 1 SKU" />
			<var name="plusMenu" value="Grouped" />
			<var name="productFullDescription" value="Grouped Product 1 Full Description" />
			<var name="productShortDescription" value="Grouped Product 1 Short Description" />
			<var name="productTitle" value="Grouped Product 1 Title" />
		</execute>

		<execute macro="CommerceEntry#saveEntryAsDraft">
			<var name="status" value="Draft" />
		</execute>
	</command>

	<command name="AddSimpleCatalogEntry" priority="5">
		<property name="portal.acceptance" value="quarantine" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="baseSku" value="Simple Product 1 SKU" />
			<var name="plusMenu" value="Simple" />
			<var name="productFullDescription" value="Simple Product 1 Full Description" />
			<var name="productShortDescription" value="Simple Product 1 Short Description" />
			<var name="productTitle" value="Simple Product 1 Title" />
		</execute>

		<execute macro="CommerceEntry#publishEntry" />

		<execute function="Pause" locator1="3000" />

		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Catalog" />
		</execute>

		<execute function="AssertElementPresent" locator1="CommerceNavigation#ENTRY_TITLE">
			<var name="key_entryTitle" value="Simple Product 1 Title" />
		</execute>
	</command>

	<command name="AddSimpleDraftCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="baseSku" value="Simple Product 1 SKU" />
			<var name="plusMenu" value="Simple" />
			<var name="productFullDescription" value="Simple Product 1 Full Description" />
			<var name="productShortDescription" value="Simple Product 1 Short Description" />
			<var name="productTitle" value="Simple Product 1 Title" />
		</execute>

		<execute macro="CommerceEntry#saveEntryAsDraft">
			<var name="status" value="Draft" />
		</execute>
