	<command name="AddVirtualDraftCatalogEntry" priority="5">
		<property name="portal.acceptance" value="true" />

		<execute macro="CommerceCatalog#addEntry">
			<var name="baseSku" value="Virtual Product 1 SKU" />
			<var name="plusMenu" value="Virtual" />
			<var name="productFullDescription" value="Virtual Product 1 Full Description" />
			<var name="productShortDescription" value="Virtual Product 1 Short Description" />
			<var name="productTitle" value="Virtual Product 1 Title" />
		</execute>

		<execute macro="CommerceEntry#saveEntryAsDraft">
			<var name="status" value="Draft" />
		</execute>
	</command>

	<command name="CheckGroupedDraftCatalogEntry" priority="5">
		<execute test-case="CPCommerceCatalog#AddGroupedDraftCatalogEntry" />

		<execute macro="CommerceNavigator#gotoEntry">
			<var name="entryTitle" value="Grouped Product 1 Title" />
			<var name="portlet" value="Catalog" />
		</execute>

		<execute macro="CommerceEntry#viewCatalogEntry">
			<var name="baseSku" value="Grouped Product 1 SKU" />
			<var name="productFullDescription" value="Grouped Product 1 Full Description" />
			<var name="productShortDescription" value="Grouped Product 1 Short Description" />
			<var name="productTitle" value="Grouped Product 1 Title" />
		</execute>
	</command>

	<command name="CheckPublishedGroupedCatalogEntry" priority="5">
