<definition>
	<command name="addEntry">
		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="Options" />
		</execute>

		<execute function="Click" locator1="Button#PLUS" />

		<execute macro="CommerceEntry#addOptionsEntry">
			<var name="optionDescription" value="${optionDescription}" />
			<var name="optionFieldType" value="${optionFieldType}" />
			<var name="optionName" value="${optionName}" />
			<var name="optionTitle" value="${optionTitle}" />
		</execute>
	</command>

	<command name="assertAllCpOptionsSet">
		<for list="facetable,required,contributor" param="cpOption" >
			<execute function="AssertElementPresent" locator1="CommerceNavigation#CPOPTIONS_STATUS" >
				<var name="key_cpOption" value="${cpOption}" />
				<var name="key_cpOptionStatus" value="true" />
			</execute>
		</for>
	</command>

	<command name="assertCpOptionSet">
		<execute function="AssertElementPresent" locator1="CommerceNavigation#CPOPTIONS_STATUS" >
			<var name="key_cpOption" value="${setCpOption}" />
			<var name="key_cpOptionStatus" value="true" />
		</execute>

		<for list="${notSetCpOption1},${notSetCpOption2}" param="cpOption" >
			<execute function="AssertElementPresent" locator1="CommerceNavigation#CPOPTIONS_STATUS" >
				<var name="key_cpOption" value="${cpOption}" />
				<var name="key_cpOptionStatus" value="false" />
			</execute>
		</for>
	</command>

	<command name="assertTwoCpOptionsSet">
		<for list="${setCpOption1},${setCpOption2}" param="cpOption" >
			<execute function="AssertElementPresent" locator1="CommerceNavigation#CPOPTIONS_STATUS" >
				<var name="key_cpOption" value="${cpOption}" />
				<var name="key_cpOptionStatus" value="true" />
			</execute>
		</for>

		<execute function="AssertElementPresent" locator1="CommerceNavigation#CPOPTIONS_STATUS" >
			<var name="key_cpOption" value="${notSetCpOption}" />
			<var name="key_cpOptionStatus" value="false" />
		</execute>
	</command>

	<command name="deleteOptionsEntries">
		<execute function="Click" locator1="CommerceNavigation#SELECT_ALL_CHECKBOX" />

		<execute function="AssertClickNoError" locator1="Button#DELETE" value1="Delete" />

		<execute function="Confirm" value1="Are you sure you want to delete the selected options?" />

		<execute macro="Alert#viewSuccessMessage" />
	</command>
</definition>