<definition>
	<command name="gotoEntry">
		<execute macro="CommerceNavigator#gotoSitesCommerce">
			<var name="portlet" value="${portlet}" />
		</execute>

		<execute function="AssertClick" locator1="CommerceNavigation#ENTRY_TITLE" value1="${entryTitle}">
			<var name="key_entryTitle" value="${entryTitle}" />
		</execute>
	</command>

	<command name="gotoSitesCommerce" summary="Navigate to Product Menu > Sites > Commerce > ${portlet}">
		<execute macro="ProductMenuHelper#expandPanelSites" />

		<execute macro="ProductMenuHelper#expandCategory">
			<var name="category" value="Commerce" />
		</execute>

		<execute macro="ProductMenuHelper#gotoPortlet">
			<var name="portlet" value="${portlet}" />
		</execute>

		<execute macro="Navigator#openURL" />
	</command>

	<command name="searchEntry">
		<execute function="Type" locator1="TextInput#SEARCH" value1="${entryTitle}">
			<var name="entryTitle" value="${entryTitle}" />
		</execute>

		<execute function="Click" locator1="CommerceNavigation#SEARCH" />
	</command>
</definition>