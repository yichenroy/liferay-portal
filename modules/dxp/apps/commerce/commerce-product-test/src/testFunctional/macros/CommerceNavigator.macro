<definition>
	<command name="gotoCommercePortletMenuItem">
		<execute function="AssertClick" locator1="CommerceNavigation#INVERSE_MENU_TAB" value1="${menuTabItem}">
			<var name="key_menuTabItem" value="${menuTabItem}" />
		</execute>
	</command>

	<command name="gotoEntry">
		<if>
			<condition function="IsElementPresent" locator1="CommerceNavigation#ENTRY_TITLE" />
			<then>
				<execute function="AssertClick" locator1="CommerceNavigation#ENTRY_TITLE" value1="${entryTitle}">
					<var name="key_entryTitle" value="${entryTitle}" />
				</execute>
			</then>
			<else>
				<execute function="Click#waitForMenuToggleJSClick" locator1="Icon#BODY_VERTICAL_ELLIPSIS" />

				<execute function="AssertClick" locator1="MenuItem#ANY_MENU_ITEM" value1="Edit">
					<var name="key_menuItem" value="Edit" />
				</execute>
			</else>
		</if>
	</command>

	<command name="gotoFrontStoreProductPage">
		<execute function="Click" locator1="CommerceEntry#FRONT_STORE_PRODUCT_LINK" />

		<execute function="SelectWindow" locator1="title=${productTitle} - Product - Liferay" />
	</command>

	<command name="gotoOptionValues">
		<execute function="Click" locator1="CommerceNavigation#OPTION_VALUES_LINK" value1="${optionEntryTitle}">
			<var name="key_optionEntryTitle" value="${optionEntryTitle}" />
		</execute>

		<execute function="WaitForSPARefresh" />

		<execute function="AssertElementPresent" locator1="CommerceEntry#TITLE_FIELD" />
	</command>

	<command name="searchEntry">
		<execute function="Type" locator1="TextInput#SEARCH" value1="${entryTitle}">
			<var name="entryTitle" value="${entryTitle}" />
		</execute>

		<execute function="Click" locator1="CommerceNavigation#SEARCH" />
	</command>
</definition>