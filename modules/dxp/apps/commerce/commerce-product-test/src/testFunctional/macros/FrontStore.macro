<definition>
	<command name="viewProductDetail">
		<var name="FSOptionValuesList" value="${FSOptionValuesList}" />

		<execute function="AssertElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_TITLE">
			<var name="key_FSProductTitle" value="${FSProductTitle}" />
		</execute>

		<if>
			<condition function="IsElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_OPTIONS" />
			<then>
				<execute function="Click" locator1="CommerceFrontStore#FS_PRODUCT_OPTIONS" />
				<for list="${FSOptionValuesList}" param="FSOptionValue">
					<execute function="AssertElementPresent" locator1="CommerceFrontStore#FS_OPTIONS_SELECT" >
						<var name="key_optionValue" value="${FSOptionValue}" />
					</execute>
				</for>
			</then>
		</if>

		<if>
			<condition function="IsElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_SKU" />
			<then>
				<execute function="AssertElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_SKU">
					<var name="key_FSProductSKU" value="${FSProductSKU}" />
				</execute>
			</then>
		</if>

		<if>
			<condition function="IsElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_PRICE" />
			<then>
				<execute function="AssertElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_PRICE">
					<var name="key_FSProductPrice" value="${FSProductPrice}" />
				</execute>
			</then>
		</if>

		<if>
			<condition function="IsElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_IMAGE" />
			<then>
				<execute function="AssertElementPresent" locator1="CommerceFrontStore#FS_PRODUCT_IMAGE" value1="${FSProductImage}">
					<var name="key_FSProductImage" value="${FSProductImage}" />
				</execute>
			</then>
		</if>
	</command>
</definition>