<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="commerce-theme-lotus" name="Commerce Theme Lotus">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="false" key="show-site-name-default" value="false" />
			<setting configurable="true" key="demo-mode" type="checkbox" value="false" />
			<setting configurable="true" key="show-cart-icon" type="checkbox" value="true" />
			<setting configurable="true" key="show-main-search-icon" type="checkbox" value="true" />
			<setting configurable="true" key="show-whishlist-icon" type="checkbox" value="true" />
			<setting configurable="false" key="show-maximize-minimize-application-links" type="checkbox" value="false" />
		</settings>
		<layout-templates>
			<custom>
				<layout-template id="commerce_1_2_columns_width_limited" name="Commerce 1-2 columns (20/80) width limited">
					<template-path>/layoutttpl/custom/commerce_1_2_columns_width_limited.tpl</template-path>
					<thumbnail-path>/layoutttpl/custom/commerce_1_2_columns_width_limited.png</thumbnail-path>
				</layout-template>
				<layout-template id="commerce_1_column_width_limited" name="Commerce 1 column (100%) width limited">
					<template-path>/layoutttpl/custom/commerce_1_column_width_limited.tpl</template-path>
					<thumbnail-path>/layoutttpl/custom/commerce_1_column_width_limited.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>