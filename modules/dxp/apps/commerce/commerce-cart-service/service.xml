<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.commerce.cart">
	<author>Alessio Antonio Rendina</author>
	<namespace>Commerce</namespace>
	<entity local-service="true" name="CommerceCart" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="CommerceCartId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="cartUserId" type="long" />
		<column name="name" type="String" />
		<column name="type" type="int" />

		<!-- Order -->

		<order by="desc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="Type" return-type="Collection">
			<finder-column name="type" />
		</finder>
		<finder name="G_U_T" return-type="CommerceCart">
			<finder-column name="groupId" />
			<finder-column name="userId" />
			<finder-column name="type" />
		</finder>
		<finder name="U_N_T" return-type="CommerceCart" unique="true">
			<finder-column name="userId" />
			<finder-column name="name" />
			<finder-column name="type" />
		</finder>
	</entity>
	<entity local-service="true" name="CommerceCartItem" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="CommerceCartItemId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="CommerceCartId" type="long" />
		<column name="CPDefinitionId" type="long" />
		<column name="CPInstanceId" type="long" />
		<column name="quantity" type="int" />
		<column name="json" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="modifiedDate" />
		</order>

		<!-- Finder methods -->

		<finder name="CommerceCartId" return-type="Collection">
			<finder-column name="CommerceCartId" />
		</finder>
	</entity>
</service-builder>