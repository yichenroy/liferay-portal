<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.commerce.forecast">
	<author>Andrea Di Giorgi</author>
	<namespace>Commerce</namespace>
	<entity local-service="true" name="CommerceForecastEntry" remote-service="false">

		<!-- PK fields -->

		<column name="commerceForecastEntryId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="time" type="long" />
		<column name="period" type="int" />
		<column name="target" type="int" />
		<column name="customerId" type="long" />
		<column name="CPInstanceId" type="long" />
		<column name="assertivity" type="BigDecimal" />

		<!-- Order -->

		<order by="asc">
			<order-column name="time" />
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="C_P_T_C_C" return-type="CommerceForecastEntry" unique="true">
			<finder-column name="companyId" />
			<finder-column name="period" />
			<finder-column name="target" />
			<finder-column name="customerId" />
			<finder-column name="CPInstanceId" />
		</finder>
	</entity>
	<entity local-service="true" name="CommerceForecastValue" remote-service="false">

		<!-- PK fields -->

		<column name="commerceForecastValueId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="commerceForecastEntryId" type="long" />
		<column name="time" type="long" />
		<column name="lowerValue" type="BigDecimal" />
		<column name="value" type="BigDecimal" />
		<column name="upperValue" type="BigDecimal" />

		<!-- Order -->

		<order by="asc">
			<order-column name="time" />
		</order>

		<!-- Finder methods -->

		<finder name="CommerceForecastEntryId" return-type="Collection">
			<finder-column name="commerceForecastEntryId" />
		</finder>
		<finder name="C_T" return-type="CommerceForecastValue" unique="true">
			<finder-column name="commerceForecastEntryId" />
			<finder-column name="time" />
		</finder>
	</entity>
</service-builder>