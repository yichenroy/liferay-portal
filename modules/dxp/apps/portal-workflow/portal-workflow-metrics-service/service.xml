<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder auto-namespace-tables="false" mvcc-enabled="true" package-path="com.liferay.portal.workflow.metrics">
	<namespace>WorkflowMetrics</namespace>
	<entity local-service="true" name="WorkflowMetricsSLACalendar" remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="workflowMetricsSLACalendarId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
	</entity>
	<entity local-service="true" name="WorkflowMetricsSLACondition" remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="workflowMetricsSLAConditionId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="workflowMetricsSLADefinitionId" type="long" />

		<!-- Finder methods -->

		<finder name="C_WMSLADI" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="workflowMetricsSLADefinitionId" />
		</finder>
	</entity>
	<entity local-service="true" name="WorkflowMetricsSLADefinition" remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="workflowMetricsSLADefinitionId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="duration" type="long" />
		<column name="processId" type="long" />
		<column name="pauseNodeNames" type="String" />
		<column name="startNodeNames" type="String" />
		<column name="stopNodeNames" type="String" />

		<!-- Finder methods -->

		<finder name="C_P" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="processId" />
		</finder>
		<finder name="C_N_P" return-type="WorkflowMetricsSLADefinition">
			<finder-column name="companyId" />
			<finder-column name="name" />
			<finder-column name="processId" />
		</finder>
	</entity>
	<exceptions>
		<exception>WorkflowMetricsSLADefinitionDuplicateName</exception>
		<exception>WorkflowMetricsSLADefinitionInvalidDuration</exception>
		<exception>WorkflowMetricsSLADefinitionName</exception>
	</exceptions>
</service-builder>