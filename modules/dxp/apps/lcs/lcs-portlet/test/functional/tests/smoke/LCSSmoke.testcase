<definition component-name="liferay-connected-services-project-administration">
	<property name="lcs.acceptance" value="true" />
	<property name="osgi.app.includes" value="lcs" />
	<property name="testray.main.component.name" value="Liferay Connected Services" />

	<set-up>
		<execute function="AntCommand" locator1="build-test.xml" value1="deploy-license-xml" />

		<execute function="Pause" locator1="15000" />

		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="SignIn#signInTestSetup" />
	</set-up>

	<tear-down>
		<var method="TestPropsUtil#get('test.portal.instance')" name="testPortalInstance" />

		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
		</if>
	</tear-down>

	<command name="Smoke" priority="5">
		<execute macro="ProductMenu#gotoControlPanelConfiguration">
			<var name="portlet" value="Liferay Connected Services" />
		</execute>

		<execute function="AssertTextPresent" value1="Connected Services" />
	</command>
</definition>