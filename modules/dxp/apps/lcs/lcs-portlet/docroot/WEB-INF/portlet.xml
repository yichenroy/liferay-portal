<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Liferay Connected Services</display-name>
		<portlet-class>com.liferay.lcs.portlet.ConnectedServicesPortlet</portlet-class>
		<init-param>
			<name>add-process-action-success-action</name>
			<value>false</value>
		</init-param>
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>
		<init-param>
			<name>view-jsp</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Liferay Connected Services</title>
			<short-title>Liferay Connected Services</short-title>
			<keywords>Liferay Connected Services</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-public-render-parameter>layoutLCSClusterEntryId</supported-public-render-parameter>
		<supported-public-render-parameter>layoutLCSClusterNodeId</supported-public-render-parameter>
		<supported-public-render-parameter>layoutLCSProjectId</supported-public-render-parameter>
	</portlet>
	<public-render-parameter>
		<identifier>layoutLCSClusterEntryId</identifier>
		<qname xmlns:x="http://www.liferay.com/public-render-parameters">x:layoutLCSClusterEntryId</qname>
	</public-render-parameter>
	<public-render-parameter>
		<identifier>layoutLCSClusterNodeId</identifier>
		<qname xmlns:x="http://www.liferay.com/public-render-parameters">x:layoutLCSClusterNodeId</qname>
	</public-render-parameter>
	<public-render-parameter>
		<identifier>layoutLCSProjectId</identifier>
		<qname xmlns:x="http://www.liferay.com/public-render-parameters">x:layoutLCSProjectId</qname>
	</public-render-parameter>
</portlet-app>