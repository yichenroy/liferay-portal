<?xml version="1.0"?>

<project basedir="." name="portal-test-expect" xmlns:antelope="antlib:ise.antelope.tasks">
	<import file="../../../../../../../build-test.xml" />

	<macrodef name="run-expect">
		<attribute name="db.upgrade.client.home" />
		<attribute name="file.suffix.bat" />
		<attribute name="expect.file" />

		<sequential>
			<delete failonerror="false" file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect" />

			<sleep seconds="2" />

			<copy
				failonerror="true"
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/@{expect.file}"
				force="true"
				overwrite="true"
				tofile="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				verbose="true"
			/>

			<sleep seconds="2" />

			<get-database-property property.name="database.host" />

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[database.host\]"
				replace="${database.host}"
			/>

			<get-database-property property.name="database.password" />

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[database.password\]"
				replace="${database.password}"
			/>

			<get-database-property property.name="database.port" />

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[database.port\]"
				replace="${database.port}"
			/>

			<get-database-property property.name="database.username" />

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[database.username\]"
				replace="${database.username}"
			/>

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[db.upgrade.client.home\]"
				replace="@{db.upgrade.client.home}"
			/>

			<replaceregexp
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				flags="gi"
				match="\[file.suffix.bat\]"
				replace="@{file.suffix.bat}"
			/>

			<chmod
				file="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect"
				perm="+x"
			/>

			<chmod
				file="@{db.upgrade.client.home}/db_upgrade@{file.suffix.bat}"
				perm="+x"
			/>

			<echo>############################################################</echo>

			<execute>
				<![CDATA[
					ls -la ${db.upgrade.client.src.dir}/src/testFunctional/dependencies
				]]>
			</execute>

			<echo>############################################################</echo>

			<exec executable="${db.upgrade.client.src.dir}/src/testFunctional/dependencies/temp.expect" failonerror="true" logError="true" />
		</sequential>
	</macrodef>
</project>